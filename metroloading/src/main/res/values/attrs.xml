<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MetroLoadingView" >
        <attr name="indicator">
            <flag name="rectangle" value="0" />
            <flag name="circle" value="1" />
        </attr>
        <attr name="indicator_color" format="color"/>
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_radius" format="dimension" />
        <attr name="has_shadow" format="boolean" />
        <attr name="shadow_color" format="color"/>
        <attr name="number" format="integer"/>
        <attr name="duration_in_mills" format="integer" />
        <attr name="interval_in_mills" format="integer" />
        <attr name="transform" format="boolean" />
        <attr name="transform_height" format="dimension" />
        <attr name="transform_width" format="dimension" />
        <attr name="fade" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension"/>
        <attr name="loading_color" format="color"/>
        <attr name="shadow_position" format="integer"/>
    </declare-styleable>
</resources>
